<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/date_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/date_message" />

    <EditText
        android:id="@+id/name_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/name_message" />

    <EditText
        android:id="@+id/location_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/location_message" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:fadeScrollbars="false" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="add"
            android:text="@string/button_message" />
    </RelativeLayout>

</LinearLayout>